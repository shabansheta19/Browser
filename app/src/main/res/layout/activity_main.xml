<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#34ffff"
    tools:context="com.example.shaban.browser.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:background="#ffffff">

        <EditText
            android:singleLine="true"
            android:inputType="textUri"
            android:padding="10dp"
            android:background="#ffffff"
            android:id="@+id/home_edit_text"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:textAppearance="?android:textAppearanceMedium"
            android:hint="Search, or enter URL"
            android:textColorHint="@color/colorAccent"
            android:textColor="#000000">
        </EditText>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_action_cancel"
            android:layout_gravity="center"
            android:id="@+id/home_cancel_btn"/>

    </LinearLayout>

    <TextView
        android:background="#ffffff"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quick access"
        android:textColor="@color/colorPrimary"
        android:padding="16dp"
        android:textAppearance="?android:textAppearanceLarge"/>

    <LinearLayout
        android:background="#ffffff"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="9dp"
            android:layout_height="70dp"
            android:id="@+id/google"
            android:src="@drawable/google"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="70dp"
            android:id="@+id/facebook"
            android:src="@drawable/facebook"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="70dp"
            android:id="@+id/youtube"
            android:src="@drawable/youtube"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_action_history"
            android:layout_weight="1"
            android:id="@+id/history_img"/>

    </LinearLayout>

</LinearLayout>
